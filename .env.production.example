# Production Environment Variables
# Copy this file to .env.production on your server

# Django Settings
DJANGO_SETTINGS_MODULE=MicroSystem.settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=client-radar.org,*.client-radar.org

# Database (if using PostgreSQL instead of SQLite)
# DATABASE_URL=postgresql://user:password@localhost/microsystem

# Email Settings (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# CORS Settings
CORS_ALLOWED_ORIGINS=https://client-radar.org,https://*.client-radar.org

# Next.js Settings
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://client-radar.org
NEXT_PUBLIC_DOMAIN=client-radar.org

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# Logging
LOG_LEVEL=INFO
